{
  "hosting": {
    "public": "public",
    "rewrites": [{
      "source": "**",
      "function": "app"
    }],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" install eslint"
      "npm --prefix \"$RESOURCE_DIR\" install"
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
